<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

  <h4>First Name:</h4> <%= f.text_field :first_name %>
  <h4>Last Name:</h4> <%= f.text_field :last_name %>
  <h4>Email:</h4> <%= f.text_field :email %>
  <h4>Password:</h4> <%= f.password_field :password %>
  <h4>Password Confirmation:</h4> <%= f.password_field :password_confirmation %>
  <%= f.submit "Submit" %>

<% end %>